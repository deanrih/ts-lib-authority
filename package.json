{
	"name": "@deanrih/ts-lib-authority",
	"description": "A helper library for handling permissions.",
	"version": "2.0.0-beta.2",
	"preview": true,
	"type": "module",
	"license": "MIT",
	"homepage": "https://deanrih.id/projects/self/ts-lib-authority",
	"readme": "./README.md",
	"author": {
		"name": "deanrih",
		"url": "https://github.com/deanrih"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/deanrih/ts-lib-authority"
	},
	"bugs": {
		"url": "https://github.com/deanrih/ts-lib-authority/issues"
	},
	"keywords": [
		"Permissions",
		"Authorization",
		"RBAC",
		"ABAC"
	],
	"sideEffects": false,
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"./dist"
	],
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			}
		},
		"./package.json": "./package.json"
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"dev": "bun run --watch ./example/index.example.ts",
		"case:dev": "bun run --watch ./example/case.example.ts",
		"test": "bun test",
		"check": "echo \"NOT IMPLEMENTED YET\"",
		"build": "bunx --bun bunup",
		"release": "bun run test && bun run build && bun publish"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.14",
		"@types/bun": "1.3.8",
		"bunup": "^0.16.22",
		"mitata": "^1.0.34",
		"typescript": "5.9.3"
	},
	"peerDependencies": {}
}
