{
	"name": "@deanrih/ts-lib-authority",
	"version": "1.0.0",
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"type": "module",
	"license": "MIT",
	"homepage": "https://deanrih.id/projects/self/ts-lib-authority",
	"description": "A helper library for handling permissions.",
	"readme": "./README.md",
	"author": {
		"name": "deanrih",
		"url": "https://github.com/deanrih"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/deanrih/ts-lib-authority"
	},
	"bugs": {
		"url": "https://github.com/deanrih/ts-lib-authority/issues"
	},
	"keywords": [
		"Permissions",
		"Authorization",
		"RBAC"
	],
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.mjs"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"dev": "bun run --watch ./example/index.example.ts",
		"case:dev": "bun run --watch ./example/case.example.ts",
		"test": "bun test",
		"build": "bun ./build.ts",
		"release": "bun run test && bun run build && bun publish"
	},
	"devDependencies": {
		"@biomejs/biome": "latest",
		"@types/bun": "latest",
		"tsup": "latest",
		"typescript": "latest"
	},
	"peerDependencies": {}
}